---
title: News page
---
extends shared/_layout
block content
  include shared/_news-cards
  
  // NEWS
  .news
    // head
    .news__head
      .container
        .row.align-items-center
          .col-12.col-md
            h1.h2-title LATEST NEWS
            
          .col-12.col-md-auto
            ul.tabs-nav(js-masonry-filter data-target="news-grid")
              li
                a.is-active(href="#" data-filter="") ALL
              li 
                a(href="#" data-filter="club") CLUB
              li 
                a(href="#" data-filter="corporate") CORPORATE
              li 
                a(href="#" data-filter="community") COMMUNITY
              li 
                a(href="#" data-filter="youth") YOUTH
            
    // wrapper
    .news__wrapper
      .container
        // masonry
        .news__masonry(js-masonry data-for="news-grid" itemscope itemtype="http://schema.org/ItemList")
          // schema.org hidden
          link(itemprop="mainEntityOfPage" href="https://dragons-team.surge.com/news.html")
          meta(name="itemListOrder" content="Descending")
            
          // grid sizer
          .grid-sizer(js-masonry-grid-sizer)                    
          +newsCard_1
          +newsCard_2
          +newsCard_3
          
          +newsCard_2
          +newsCard_4
          +newsCard_5
          
          +newsCard_3
          +newsCard_2
          +newsCard_1

          +newsCard_5
          +newsCard_2
          +newsCard_4
      
        
        // more button
        .news__more
          a(href="#" js-load-more).btn.btn-big.btn-big--black Load More
          
      
                      
  include components/_fixtures
  
  include components/_about
  
  include components/_sponsors
