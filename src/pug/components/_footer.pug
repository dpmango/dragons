footer.footer(js-reveal-footer)
  .container
    .footer__wrapper
      // contacts
      .footer__contacts
        .footer-contact
          .footer-contact__icon
            +icon('ico-ticket')
          .footer-contact__holder
            .footer-contact__title TICKET PURCHASE 
            .footer-contact__text 
              a(href="tel:01633674990") 01633 674 990
        // next contact
        .footer-contact
          .footer-contact__icon
            +icon('ico-phone')
          .footer-contact__holder
            .footer-contact__title General enquiries
            .footer-contact__text 
              a(href="tel:01633674990") 01633 674 990
        // next contact
        .footer-contact
          .footer-contact__icon
            +icon('ico-location')
          .footer-contact__holder
            .footer-contact__title Find us 
            .footer-contact__text 
              a(href="https://www.google.com/maps/search/Rodney+Parade,+Newport,+Gwent++%E2%80%A8NP19+0UU/@51.5889672,-2.9898013,16.64z" target="_blank")
