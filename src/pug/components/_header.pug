// HEADER :: START
header.header(aria-label="Header")
  // TOP
  .header-top(js-header-top)
    .container
      .header__top
        .header__controls
          // socials
          .header__socials.social-icons(aria-label="Our social media pages")
            .social-icons__col
              a(href="https://www.facebook.com/dragonsrugby.wales" target="_blank" aria-label="Visit Facebook page").social-icons__icon.social-icons__icon--facebook
                +icon('ico-social-facebook')
            .social-icons__col
              a(href="https://www.instagram.com/dragonsrugby/" target="_blank" aria-label="Visit Instagram page").social-icons__icon.social-icons__icon--instagram
                +icon('ico-social-instagram')
            .social-icons__col
              a(href="https://twitter.com/dragonsrugby" target="_blank" aria-label="Visit Twitter page").social-icons__icon.social-icons__icon--twitter
                +icon('ico-social-twitter')
            .social-icons__col
              a(href="https://www.youtube.com/channel/UCdB_8F9Yqur14jXdSzxyQeA" target="_blank" aria-label="Visit YouTube page").social-icons__icon.social-icons__icon--youtube
                +icon('ico-social-youtube')
                
