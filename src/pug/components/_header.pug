          // sponsor
          .header__sponsor
            span.header__sponsor-text Main Club <br/>Sponsor
            a(href="#").header__sponsor-logo
              i.icon.icon-logo-monmouthshire(aria-label="monmouthshire")
  
  // STICKY
  .header-sticky(js-header-sticky)
    .container
      a(href="homepage.html" aria-label="Navigate to homepage" js-header-logo).header__logo
        i.icon.icon-logo(aria-label="Dragons Logo")

      .header__bottom
        ul.header__menu(aria-label="Site primary menu")
          li
            a(href="homepage.html") Home
          li
            a(href="news.html") News
          li
            a(href="#") Tickets
          li
            a(href="#" aria-owns="aria-teams" js-dropdown-menu data-target="teams") Teams
          li
            a(href="#") Match
          li
            a(href="#") REGION
          li
            a(href="#") Shop
          li
            a(href="#") CommerciaL
          li
            a(href="#") Contact

        // cta
        .header__cta
          a(href="#").btn.btn-primary BUY TICKETS
          
        .header__hamburger(aria-label="Toggle mobile menu")
          .hamburger.hamburger--squeeze(js-hamburger)
            .hamburger-box
              .hamburger-inner

