// HEADER :: START
header.header
  // TOP
  .header-top(js-header-top)
    .container
      .header__top
        .header__controls
          // socials
          .header__socials.social-icons
            .social-icons__col
              a(href="#" target="_blank" area-label="Facebook").social-icons__icon.social-icons__icon--facebook
                +icon('ico-social-facebook')
            .social-icons__col
              a(href="#" target="_blank" area-label="Instagram").social-icons__icon.social-icons__icon--instagram
                +icon('ico-social-instagram')
            .social-icons__col
              a(href="#" target="_blank" area-label="Twitter").social-icons__icon.social-icons__icon--twitter
                +icon('ico-social-twitter')
            .social-icons__col
              a(href="#" target="_blank" area-label="YouTube").social-icons__icon.social-icons__icon--youtube
                +icon('ico-social-youtube')
                
          // subscription form
          .header__subscription
            form(action="#" js-subscription-validation).subsc-form
              input.subsc-form__input.ui-input(
                type="email" 
                placeholder="Join our Mailing List"
                id="email"
                name="email")
              button.subsc-form__cta.btn.btn-primary(type="submit") SUBSCRIBE
          
          // cta
          .header__cta
            a(href="#").btn.btn-primary BUY TICKETS
          
          // sponsor
